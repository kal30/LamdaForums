@model LambdaForums.Models.Search.SearchResultModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            <span>Search Result for @Model.SearchQuery</span>
           
            <form asp-controller="Search" asp-action="Search" method="post">
                <div class="searchForm">
                    <input asp-for="SearchQuery" type="text" placeholder="Search..." class="searchBar" onfocus="clearThis(this)" />
                    <button type="submit" class="btn btn-forumSearch">
                        <i class="material-icons">search</i>"
                    </button>
                </div>
            </form>
        </div> 
    </div>
    <div class="row forumIndexContent">
        @if (!Model.EmptySearchResults)
        {
            <table class="table table-hover table-bordered" id="searchIndexTable">
                <tbody>
                    @foreach (var post in Model.Posts)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Forum" asp-action="Topic" asp-route-id="@post.Forum.Id">
                                    @post.Forum.Title <br />
                                    <div class="forumLogo" style="background-image: url(@post.Forum.ImageUrl)"></div>
                                </a>
                                <div class="postData">
                                    <div class="postTitle">
                                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                                            @post.Title
                                        </a>
                                    </div>
                                    <div class="forumSubTitle">
                                        <div>
                                            <span class="postAuthor">
                                                <a asp-controller="Profile" asp-action="Detail" asp-route-id="@post.AuthorId">
                                                    @post.AuthorName
                                                </a>
                                            </span>
                                            (@post.AuthorRating)
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="forumPostCount">
                                    Replies : @post.RepliesCount
                                </div>
                            </td>
                            <td>
                                <div class="postDate">
                                    @post.DatePosted
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>

            </table>

        }
        else
        {
            <div class="noPosts">
                <i class="material-icons md-72">questions-answer</i>
                <h3>
                    No post found for @Model.SearchQuery                   
                </h3>
            </div>

        }
    </div>
</div>

@section Scripts{
    <script>
        function clearThis(target) {
            target.value = "";

        }
    </script>
}



